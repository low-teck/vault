{
    "name": "x",
    "version": "0.1.0",
    "private": true,
    "main": "public/electron.js",
    "productName": "Vault",
    "homepage": "./",
    "author": "low-teck",
    "license": "MIT",
    "description": "Vault is a tool for managing your private data",
    "dependencies": {
        "@chakra-ui/icons": "^1.1.1",
        "@chakra-ui/react": "^1.7.2",
        "@emotion/react": "^11",
        "@emotion/styled": "^11",
        "@fontsource/gochi-hand": "^4.5.0",
        "@fontsource/nunito": "^4.5.1",
        "@testing-library/jest-dom": "^5.11.4",
        "@testing-library/react": "^11.1.0",
        "@testing-library/user-event": "^12.1.10",
        "@types/jest": "^27.0.3",
        "@types/nedb": "^1.8.12",
        "@types/node": "^16.11.9",
        "@types/react": "^17.0.36",
        "@types/react-dom": "^17.0.11",
        "@types/react-router-dom": "^5.3.2",
        "concurrently": "^7.0.0",
        "crypto-js": "^4.1.1",
        "electron-log": "^4.4.5",
        "formik": "^2.2.9",
        "framer-motion": "^4",
        "fuse.js": "^6.5.3",
        "keytar": "^7.7.0",
        "nedb": "^1.8.0",
        "nedb-promises": "^5.0.3",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-dropzone": "^11.4.2",
        "react-router-dom": "^6.0.2",
        "react-scripts": "4.0.3",
        "react-virtuoso": "^2.7.1",
        "typescript": "^4.5.2",
        "use-debounce": "^7.0.1",
        "wait-on": "^6.0.0",
        "web-vitals": "^1.0.1",
        "yup": "^0.32.11"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/low-teck/vault.git"
    },
    "build": {
        "files": [
            "build/**/*",
            "node_modules/**/*"
        ],
        "publish": {
            "provider": "github",
            "repo": "vault",
            "owner": "low-teck"
        },
        "appId": "com.electron.vault",
        "productName": "Vault",
        "directories": {
            "buildResources": "public"
        },
        "mac": {
            "target": "dmg"
        },
        "win": {
            "target": "nsis"
        },
        "linux": {
            "target": "deb"
        }
    },
    "scripts": {
        "start": "export BROWSER=none && react-scripts start",
        "start-win": "set BROWSER=none && react-scripts start",
        "start-electron": "export ELECTRON_START_URL=http://localhost:3000 && electron .",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "electron-pack": "electron-builder -c.extraMetadata.main=build/electron.js",
        "preelectron-pack": "yarn build"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@types/crypto-js": "^4.0.2",
        "electron": "^16.0.1",
        "electron-builder": "^22.14.5",
        "electron-is-dev": "^2.0.0",
        "fork-ts-checker-webpack-plugin": "^7.0.0",
        "prettier": "^2.4.1"
    }
}
